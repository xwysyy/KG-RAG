# ---- non-reasoning ----
LLM_API_KEY=your-llm-api-key
LLM_BASE_URL=http://localhost:8000/v1
LLM_MODEL=deepseek-chat

# ---- reasoning ----
REASONING_LLM_API_KEY=your-reasoning-llm-api-key
REASONING_LLM_BASE_URL=http://localhost:8000/v1
REASONING_LLM_MODEL=deepseek-reasoner

# ---- Neo4j ----
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=neo4j
NEO4J_DATABASE=neo4j

# ---- Embedding (Qwen3-Embedding-8B, OpenAI-compatible) ----
EMBEDDING_API_KEY=your-embedding-api-key
EMBEDDING_BASE_URL=http://localhost:8000/v1
EMBEDDING_MODEL=Qwen3-Embedding-8B
EMBEDDING_DIM=4096

# ---- Firecrawl (web search, optional) ----
FIRECRAWL_API_KEY=your-firecrawl-api-key

# ---- Chunking / Retrieval ----
CHUNK_SIZE=8192
CHUNK_OVERLAP=64
TOP_K=5

# ---- Agent ----
MAX_ITERATIONS=3
AGENT_CONCURRENCY=3

# ---- LangSmith (Observability) ----
LANGSMITH_TRACING=true
LANGSMITH_API_KEY=your-langsmith-api-key
LANGSMITH_PROJECT=kg-rag

# ---- Paths ----
DATA_DIR=data
SESSION_DB_PATH=data/sessions.sqlite3

# ---- Concurrency ----
LLM_CONCURRENCY=50
LLM_REQUEST_TIMEOUT=600
STORAGE_CONCURRENCY=50
FILE_CONCURRENCY=25

# ---- API ----
API_HOST=0.0.0.0
API_PORT=8765
SESSION_HISTORY_ROUNDS=5
